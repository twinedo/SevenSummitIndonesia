<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:background="#FFF"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp"
    card_view:cardBackgroundColor="#4CAF50"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Navigasi Menu dibagian pojok kiri layar atas berupa tombol dengan pilihan, yaitu:"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Beranda, berisi menu utama dimana akan ditampilkan 3 buah tombol, yaitu:"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="a. Daftar Gunung, tombol ini akan masuk ke dalam informasi 7 gunung tertinggi di Indonesia"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="b. Persiapan Pribadi, tombol ini akan masuk ke dalam informasi persiapan pribadi apa saja yang harus dibawa"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="c. Persiapan Kelompok, tombol ini akan masuk ke dalam informasi persiapan kelompok apa saja yang harus dibawa"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Bantuan, berisi panduan menggunakan aplikasi"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Tentang, berisi informasi tentang aplikasi ini"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. Keluar, digunakan untuk keluar dari aplikasi"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
    </LinearLayout>
</android.support.v7.widget.CardView>